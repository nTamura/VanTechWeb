      <li><%= link_to '<i class="material-icons">event</i>'.html_safe, events_path, class: 'tooltipped', data: { position: 'right', tooltip: 'Events'} %></li>

      <li><%= link_to '<i class="material-icons">business</i>'.html_safe, organizations_path, class: 'tooltipped', data: { position: 'right', tooltip: 'Organizations directory'} %></li>

      <li><%= link_to '<i class="material-icons">library_books</i>'.html_safe, articles_path, class: 'tooltipped', data: { position: 'right', tooltip: 'Articles'} %></li>

      <li><%= link_to '<i class="material-icons">tag_faces</i>'.html_safe, about_index_path, class: 'tooltipped', data: { position: 'right', tooltip: 'About us'} %></li>
    </ul>

  </nav>
