
<div class="body-container">
  <div class="container">
    <% if !current_user.organization.present?%>
      <div>
        <h3>Create your organization</h3>
      </div>
      <%= form_for @organization, html: { multipart: true } do |f| %>

        <%= f.label :name %><br>
        <%= f.text_field :name%>

        <%= f.label :address %><br>
        <%= f.text_field :address%>

        <%= f.label :overview %><br>
        <%= f.text_field :overview%>

        <%= f.label :employees %><br>
        <%= f.text_field :employees, placeholder: "Number of employees"%>

        <%= f.label :teamsize %><br>
        <%= f.text_field :teamsize, placeholder: "Number of tech teamsize"%>

        <%= f.label :website %><br>
        <%= f.text_field :website%>

        <%= f.label :twitter %><br>
        <%= f.text_field :twitter%>

        <%= f.label :icon %><br>
        <%= f.file_field :icon%><br><br>

        <%= f.label :Technology %><br>
        <%= f.collection_select :tag_ids, Tag.order(:name), :id, :name,
                                        {},
                                        { multiple: true, class:'browser-default chosen-select'}%>
        <br><br>
        <div class="right">
          <%= button_tag( :class => "btn") do %>
          Create Organization<i class="material-icons right">send</i>
          <% end %>
        </div>
        <% end %>
    <% else %>
    <!-- when we have link to create new, then change it  -->
      <h3>You have already have one organization!</h3>
      <%= link_to "Go to your organization", organization_path(current_user.organization), class:"btn"%>
    <% end %>
    <br>

  </div>
</div>
